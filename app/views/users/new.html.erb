<div class="content in-out-new">
  <br>
  <h1> Sign up</h1>
  <br>
  <%= form_for @user do |form| %>
    <table class="table user">
      <tr>
        <td><%= form.label "Email" %></td>
        <td><%= form.text_field :email %></td>
      </tr>
      <tr>
        <td><%= form.label "Password" %></td>
        <td><%= form.password_field :password %></td>
      </tr>
      <tr>
        <td><%= form.label :password_confirmation %></td>
        <td><%= form.password_field :password_confirmation %></td>
      </tr>
      <tr>
        <td><%= form.label "Admin" %></td>
        <td><%= form.check_box :admin %></td>
      </tr>
    </table>
    <%= form.submit "Sign Up" %>
  <% end %>
</div>
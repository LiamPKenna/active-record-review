<%= render "layouts/errors", :object => @product %>
<div class="jumbotron">
  <h2>New Product</h2>
</div>
<div class="content">
  <div class="form-group">
    <%=form_for @product do |f|%>
    <%=f.label :Product_Name%>
    <%=f.text_field :name%>
    <br>
    <%=f.label :Cost%>
    <%= f.number_field :cost, value: @product.cost ? '%.2f' % @product.cost : nil, min: 0, step: 0.01 %>
    <br>
    <%=f.label :Country_of_Origin%>
    <%=f.text_field :country_of_origin%>
    <br>
    <br>
    <%=f.submit%>
    <%end%>
  </div>
</div>
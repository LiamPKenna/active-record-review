<div class="jumbotron">
  <h1><%= @product.name %></h1>
  <h3><strong><%= number_to_currency(@product.cost) %></strong> from <%= @product.country_of_origin %><h3>
</div>
<div class="content">
  <%if @reviews.any?%>
  <ul>
    <%@reviews.each do |review|%>
    <li><%= link_to review.author, product_review_path(review)%></li>
    <%end%>
  </ul>
  <%else%>
  <p>No reviews to display.</p>
  <%end%>
  <p><%= link_to "Edit product", edit_product_path(@product)%></p>
  <p><%= link_to "Delete product", product_path(@product),
    :data => {:confirm => "Are you sure?",
    :method => "delete"} %></p>
  <p><%= link_to "Create new review", new_product_review_path(@product) %></p>
  </div>